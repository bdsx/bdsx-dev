{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Build",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": ["./tools/bundlerun.js", "./tools/build/build.ts"],
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Installer",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}/../bdsx",
            "args": ["../bdsx/bdsx/installer/installer.js", "./bedrock_server", "-y"],
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Document Parser",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": ["./tools/bundlerun.js", "./tools/bds-scripting/docparser.ts"]
        },
        {
            "runtimeExecutable": "${workspaceFolder}/../bdsx/bedrock_server/bedrock_server.exe",
            "type": "legacy-node",
            "request": "launch",
            "name": "Launch Assembly Tests",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": ["./tools/bundlerun.js", "./tools/asm/asmtestrun.ts"],
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Plugin Manager",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}/../bdsx",
            "args": ["../bdsx/bdsx/pluginmgr/index.js"],
            "console": "integratedTerminal"
        },
        {
            "runtimeExecutable": "${workspaceFolder}/../bdsx/bedrock_server/bedrock_server.exe",
            "type": "legacy-node",
            "request": "launch",
            "name": "Launch PDB Parser",
            "args": ["./tools/bundlerun.js", "./tools/pdbparser/index.ts"],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal"
        }
    ]
}