{
  "exclude": [
    "node_modules",
    "bdsx/node_modules",
    "bdsx/bedrock_server",
    "bdsx/addons",
    "bdsx-core",
    "ken"
  ],
  "compilerOptions": {
    "outDir": "bdsx/bdsx",
    "target": "es2017",
    "lib": [ "es2017" ],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "inlineSourceMap": true,
    "importHelpers": true,
    "experimentalDecorators": true
  }
}
